<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/history_summary_date_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="날짜"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/history_summary_origin_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="출발지"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/history_summary_waypoints_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="경유지"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/history_summary_destination_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="도착지"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/history_summary_payment_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="낸 비용"
            android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>
